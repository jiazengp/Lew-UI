{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "lew-ui": ["./lib"],
      "lew-ui/*": ["./lib/*"],
      "@/*": ["./lib/docs/*"]
    },
  },
  "include": [
    "lib/**/*.vue",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.d.ts",
    "lib/docs/docs/inputTag/demo/DemoInputTag2vue",
    "lib/docs/views/form-engine/schema/base.ts"
  ],
  "exclude": ["lib/components/_backup/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
